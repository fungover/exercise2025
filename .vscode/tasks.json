{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Auto Run App on Save",
      "type": "shell",
      "command": "find src -name '*.java' | entr -r sh -c 'clear && mvn compile exec:java -Dexec.mainClass=org.example.App'",
      "isBackground": true,
      "problemMatcher": [],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "Run App.java Once",
      "type": "shell",
      "command": "mvn compile exec:java -Dexec.mainClass=org.example.App",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$tsc"]
    }
  ]
}
